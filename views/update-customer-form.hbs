<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update Customer</li>
    </ol>
</nav>

<hr>

<form method="post" action="/modify-customer">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-3 form-group">
                <label for="inputNic" class="form-label">NIC</label>
                <input type="text" class="form-control" name="nic" id="inputNic" value="{{this.customer.nic}}" readonly=true>
            </div>
            <div class="col-md-3 mb-3 form-group">
                <label for="InputName" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" id="InputName" value="{{this.customer.name}}">
            </div>
            <div class="col-md-3 mb-3 form-group">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" name="address" id="inputAddress" value="{{this.customer.address}}">
            </div>
            <div class="col-md-3 mb-3 form-group">
                <label for="InputSalary" class="form-label">Salary</label>
                <input type="text" class="form-control" name="salary" id="InputSalary" value="{{this.customer.salary}}">
            </div>
            <div class="col-12 mt-3">
            <button type="submit" class="btn btn-outline-dark col-12">Update Customer</button>
            </div>
        </div>
    </div>
</form>